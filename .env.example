# Server
PORT=5000
NODE_ENV=development

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/safefall?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Client URL (for CORS and Socket.io)
CLIENT_URL=http://localhost:5173

# Google OAuth (optional - for Google sign-in)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Email (optional - for emergency notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=SafeFall AI <your-email@gmail.com>
